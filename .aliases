#!/bin/zsh

# MacOS specific
alias bell='tput bel'
alias ghwatch='gh pr checks --watch && notify "CI has completed successfully :D" || notify "Oh no, CI failed ;("'

# notify is a script I have in /usr/local/bin (macOS specific)
# #!/bin/bash
